<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employable"
        android:textColor="#1480D3"
        android:textSize="35dp"
        android:fontFamily="@font/poppins_extrabold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/spinnerSector"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        />

    <TextView
        android:id="@+id/sectorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSkills"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSector"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/skillsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/sectorLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />

    <TextView
        android:id="@+id/EducationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/skillsLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />

    <Spinner
        android:id="@+id/spinnerEducation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewSkills"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExperience"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEducation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/experienceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/EducationLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />

    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/experienceLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />

    <EditText
        android:id="@+id/usernameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewExperience"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        />

    <EditText
        android:id="@+id/passwordBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/usernameBox"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
 />

    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/usernameLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:textColor="#1480D3"
        />

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textSize="15dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#1480D3"
        app:layout_constraintTop_toBottomOf="@id/passwordBox"
        />



</androidx.constraintlayout.widget.ConstraintLayout>